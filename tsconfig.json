{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es2018",
      "outDir": "build",
      "resolveJsonModule": true,
      "sourceMap": false,
      "inlineSourceMap": false,
      "inlineSources": false,
      "incremental": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "typeRoots": [".d.ts", "./node_modules/@types"]
    },
    "exclude": ["node_modules"],
    "include": ["source/**/*"]
  }
  